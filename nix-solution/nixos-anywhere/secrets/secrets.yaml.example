# Example secrets file (unencrypted)
# Copy this to secrets.yaml and encrypt with: sops -e -i secrets.yaml
#
# To edit encrypted secrets: sops secrets.yaml
# To view encrypted secrets: sops -d secrets.yaml

# === Authelia Secrets ===
authelia:
  # JWT secret (generate with: openssl rand -base64 64)
  jwt_secret: "REPLACE_WITH_ACTUAL_SECRET"

  # Session secret (generate with: openssl rand -base64 64)
  session_secret: "REPLACE_WITH_ACTUAL_SECRET"

  # Storage encryption key (generate with: openssl rand -base64 64)
  storage_encryption_key: "REPLACE_WITH_ACTUAL_SECRET"

  # LDAP bind password
  ldap_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # SMTP password (if using email notifications)
  smtp_password: "REPLACE_WITH_ACTUAL_PASSWORD"

# === Vaultwarden Secrets ===
vaultwarden:
  # Admin token (generate with: openssl rand -base64 48)
  admin_token: "REPLACE_WITH_ACTUAL_TOKEN"

  # SMTP password (for email functionality)
  smtp_password: "REPLACE_WITH_ACTUAL_PASSWORD"

# === Database Secrets ===
database:
  # PostgreSQL superuser password
  postgres_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # Nextcloud database password
  nextcloud_db_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # GitLab database password
  gitlab_db_password: "REPLACE_WITH_ACTUAL_PASSWORD"

# === LDAP Secrets ===
ldap:
  # Admin password for LLDAP
  admin_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # JWT secret for LLDAP API
  jwt_secret: "REPLACE_WITH_ACTUAL_SECRET"

# === Nextcloud Secrets ===
nextcloud:
  # Admin password
  admin_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # Instance ID (generate with: uuidgen)
  instanceid: "REPLACE_WITH_UUID"

  # Secret (generate with: openssl rand -hex 32)
  secret: "REPLACE_WITH_ACTUAL_SECRET"

# === GitLab Secrets ===
gitlab:
  # Root password
  root_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # Database password
  db_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # Secret key base (generate with: openssl rand -hex 64)
  secret_key_base: "REPLACE_WITH_ACTUAL_SECRET"

  # OTP key base (generate with: openssl rand -hex 64)
  otp_key_base: "REPLACE_WITH_ACTUAL_SECRET"

  # DB key base (generate with: openssl rand -hex 64)
  db_key_base: "REPLACE_WITH_ACTUAL_SECRET"

# === Traefik Secrets ===
traefik:
  # Dashboard password (hashed with htpasswd)
  # Generate with: htpasswd -nb admin password
  dashboard_auth: "REPLACE_WITH_HTPASSWD_HASH"

# === API Keys and Tokens ===
api_keys:
  # Proxmox API token
  proxmox_token: "REPLACE_WITH_ACTUAL_TOKEN"

  # Cloud provider API keys
  # aws_access_key: "REPLACE_WITH_ACTUAL_KEY"
  # aws_secret_key: "REPLACE_WITH_ACTUAL_SECRET"

# === Backup Secrets ===
backup:
  # Restic repository password
  restic_password: "REPLACE_WITH_ACTUAL_PASSWORD"

  # SSH key for remote backups (if needed)
  # ssh_key: |
  #   -----BEGIN OPENSSH PRIVATE KEY-----
  #   ...
  #   -----END OPENSSH PRIVATE KEY-----

# === SSL/TLS Certificates ===
# (Usually managed by Let's Encrypt, but can be stored here if needed)
# ssl:
#   certificate: |
#     -----BEGIN CERTIFICATE-----
#     ...
#     -----END CERTIFICATE-----
#   private_key: |
#     -----BEGIN PRIVATE KEY-----
#     ...
#     -----END PRIVATE KEY-----
